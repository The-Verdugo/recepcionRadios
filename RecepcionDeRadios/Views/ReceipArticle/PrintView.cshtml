@model RecepcionDeRadios.Models.ReceipArticle
@{
    ViewBag.Title = "PrintView";
    Layout = null;
}

<link href="@Url.Content("~/Content/ticket.css")" rel="stylesheet" type="text/css" />
@Scripts.Render("~/bundles/jquery")
<div class="container">
    <img class="logo" src="https://grupovidantarh.files.wordpress.com/2017/02/cropped-logo-grupo-vidanta-plano-02-11.png" />
    <h3>Recepción de radios</h3>
    <p>Folio: #@Html.DisplayFor(model => model.ID)</p>
    <p>Usuario que recibe: @ViewBag.USER.Name</p>
    <p>Colaborador que entrega: @Html.DisplayFor(model => model.empleadoEntrega)</p>
    <p>Fecha Recibido: @Html.DisplayFor(model => model.fechaRecibido)</p>
    <h3>Listado de artículos</h3>
    <table class="tabla">
        <tr>
            <th>
                <p>ID<hr /></p>
            </th>
            <th>
                <p>Descripción<hr /></p>
            </th>
            <th>
                <p>Falla<hr /></p>
            </th>
        </tr>

        @foreach (var item in Model.ReceipArticleDetails)
        {
            <tr class="articles">
                <td>
                    <p> @Html.DisplayFor(modelItem => item.ArticleID) </p>
                </td>
                <td>
                    <p> @Html.DisplayFor(modelItem => item.Description)</p>
                </td>
                <td>
                    <p> @Html.DisplayFor(modelItem => item.ReportedFailure)</p>
                </td>
            </tr>
        }

    </table>
    <p>Fecha y hora de impresión: @DateTime.Now</p>
    <script type="text/javascript">
        $(document).ready(function () {
            window.print();
            window.onfocus = function () { window.close(); }
        });
    </script>
</div>
